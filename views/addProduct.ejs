<%- include ("navbar.ejs") %>
<main class="adminpage">
    <h1 class="pageheadline">L채gg till:</h1>
    <% for (const item of spotifyResponse.items) { %>
        <form action="<%= ROUTE.adminAddProduct %>" method="post" class="add-product-form">
            <fieldset class="about-album">
                <label for="artist">Artist</label>
                <input type="text" name="artist" value="<%= item.artists[0].name %>" readonly />
                <label for="album">Album</label>
                <input type="text" name="album" value="<%= item.name %>" readonly />
                <label for="tracks">Antal l책tar</label>
                <input type="text" name="tracks" value="<%= item.total_tracks %>" readonly />
                <label for="spotifyid">Spotify ID</label>
                <input type="text" name="spotifyId" id="" value="<%= item.artists[0].id %>" readonly />
                <label for="imgUrl">Bildl채nk</label>
                <input type="text" name="imgUrl" value="<%= item.images[0].url %>" readonly />
                <div class="checkboxes">
                    <% for (const genre of genres) { %>
                        <div class="box-container">
                            <label for="genre<%= genre %>"><%= genre %></label>
                            <input type="checkbox" name="genre<%= genre %>">
                        </div>
                    <% } %>
                </div>
                <label for="price">Pris</label>
                <input type="number" name="price" />
                <label for="addedBy">Tillagd av</label>
                <input type="text" name="adminName" value="<%= userInfo.email %>">
                <label for="adminId">Admin ID: </label>
                <input type="text" name="adminId" value="<%= userInfo._id %>">
                <div class="add-album">
                    <button type="submit">L채gg till i databas</button>
                </div>
            </fieldset>
        </form>
    <% } %>
</main>
